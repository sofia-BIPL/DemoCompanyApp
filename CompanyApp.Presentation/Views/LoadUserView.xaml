<UserControl x:Class="CompanyApp.Presentation.Views.LoadUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="List of Users" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- User List -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Users}" 
                  SelectedItem="{Binding SelectedUser}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  SelectionMode="Single"
                  BorderBrush="{StaticResource DarkerPink}"
                  BorderThickness="1"
                  Background="White"
                  RowBackground="#FFF0F5"
                  AlternatingRowBackground="#FFD1DC"
                  AlternationCount="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PK_User_Id}" Width="60"/>
                <DataGridTextColumn Header="User Name" Binding="{Binding User_Name}" Width="*"/>
                <DataGridTextColumn Header="Company ID" Binding="{Binding FK_Comp_Id}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Back" Command="{Binding GoBackCommand}" Width="100" Height="40" FontSize="14" IsCancel="True"/>
        </StackPanel>
    </Grid>
</UserControl>
