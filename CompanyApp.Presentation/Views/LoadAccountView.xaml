<Window x:Class="CompanyApp.Presentation.Views.LoadAccountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Load Account" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Select an Account" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Account List -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Accounts}" 
                  SelectedItem="{Binding SelectedAccount}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  SelectionMode="Single"
                  BorderBrush="{StaticResource DarkerPink}"
                  BorderThickness="1"
                  Background="White"
                  RowBackground="#FFF0F5"
                  AlternatingRowBackground="#FFD1DC"
                  AlternationCount="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PK_Acc_Id}" Width="50"/>
                <DataGridTextColumn Header="Account Name" Binding="{Binding Acc_Name}" Width="*"/>
                <DataGridTextColumn Header="Group" Binding="{Binding Acc_Group}" Width="150"/>
                <DataGridTextColumn Header="Balance" Binding="{Binding Acc_Balance}" Width="120"/>
                <DataGridTextColumn Header="User ID" Binding="{Binding FK_User_Id}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Back" Command="{Binding GoBackCommand}" Width="100" Height="40" FontSize="14" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
