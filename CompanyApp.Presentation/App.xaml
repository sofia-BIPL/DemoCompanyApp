<Application x:Class="CompanyApp.Presentation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CompanyApp.Presentation"
             xmlns:vm="clr-namespace:CompanyApp.Presentation.ViewModels"
             xmlns:views="clr-namespace:CompanyApp.Presentation.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryPink" Color="#FFD1DC"/>     <!-- Pastel Pink -->
        <SolidColorBrush x:Key="DarkerPink" Color="#FFB7C5"/>      <!-- Darker Pastel Pink -->
        <SolidColorBrush x:Key="BackgroundPink" Color="#FFF0F5"/>  <!-- Lavender Blush -->
        <SolidColorBrush x:Key="TextDark" Color="#4A4A4A"/>
        
        <!-- Window Style -->
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource BackgroundPink}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryPink}"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkerPink}"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBlock Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
        </Style>

        <!-- Data Templates for Navigation -->
        <DataTemplate DataType="{x:Type vm:MainMenuViewModel}">
            <views:MainMenuView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:CreateCompanyViewModel}">
            <views:CreateCompanyView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LoadCompanyViewModel}">
            <views:LoadCompanyView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:CompanyDashboardViewModel}">
            <views:CompanyDashboardView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:CreateUserViewModel}">
            <views:CreateUserView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LoadUserViewModel}">
            <views:LoadUserView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:CreateAccountViewModel}">
            <views:CreateAccountView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LoadAccountViewModel}">
            <views:LoadAccountView/>
        </DataTemplate>

    </Application.Resources>
</Application>
